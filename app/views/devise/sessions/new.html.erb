



<%= provide(:title,"Sign in")%>
<div class="container sign_in">
	<div class="row">
		<div class="header">
			<h1 style="text-align: center;">SIGN IN</h1>
			<%= render 'layouts/alert'%>
		</div>
	</div>
	<div class="row" >

		<div class="col-md-6 col-md-offset-3 sign-in-form">
		<%=form_for resource, as: resource_name, url: session_path(resource_name) ,class:"form-control" do |f| %>
		<div class="form-group">

		<%= f.label :email %>
		<%= f.text_field :email ,class:'form-control',autofocus: true%>
		</div>
		<div class="form-group">

		<%= f.label :password  %>
		<%= f.text_field :password,class:'form-control' ,type: "password"%>
		</div>
		<%= f.check_box :remember_me, as: :boolean if devise_mapping.rememberable? %> Remember me
		<div class="center form-actions">
		<%= f.submit 'Sign in', class:'btn btn-primary' %>

		<p>Don`t have  user <%= link_to 'Sign up',new_user_registration_path %></p>
			</div>
		</div>
		<% end %>
		
		</div>
	</div>

