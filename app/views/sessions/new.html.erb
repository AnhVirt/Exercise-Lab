<div class="container sign_in">
	<div class="row">
		<div class="header">
			<h1 style="text-align: center;">SIGN IN FORM</h1>
		</div>
	</div>
	<div class="row" >
		<div class="col-md-4 col-md-offset-4 sign-in-form">
		<%=form_for :session ,class:"form-horizontal" do |f| %>
		<div class="form-group">

		<%= f.label:email %>
		<%= f.text_field :email ,class:'form-control'%>
		</div>
		<div class="form-group">

		<%= f.label :password  %>
		<%= f.text_field :password,class:'form-control' ,type: "password"%>
		</div>
			<div class="center">
		<%= f.submit 'Sign in', class:'btn btn-primary' %>
		<p>Don`t have  account <%= link_to 'Sign up',sign_up_path %></p>
			</div>
		</div>
		<% end %>
		
		</div>
	</div>

