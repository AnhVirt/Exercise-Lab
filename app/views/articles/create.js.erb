<% if @article.errors.any? %>
		Toast("error","Content not null","ERROR");
	<%else%>
		$('#edit-form').remove();
		$("div[id^='article_']").show();
		$('#article_content').val("");
		Toast("success","Article was created","SUCCESS");
		$('<%= j render @article%>').hide().prependTo('#articles').slideDown(300);
<%end %>
