<div class="col-md-6 col-md-offset-3  form-group">	
	<% if logged_in? %>
		<%= form_for @article,:html => { :class => 'form-horizontal', multipart: true },:authenticity_token => true,
		remote: true  do |f| %>
  		<%= f.text_area  :content ,class:"form-control",placeholder:"Hôm này em đang làm gì?", :rows=>"5" %>
			<%= f.fields_for  :pictures do |builder| %>
				<%= f.label  :pictures, :class => 'control-label' %>
				<%= f.file_field  :images, multiple: true %>
				<%end%>
  		<%= f.submit " Dang bai viet", class:'btn btn-default' %>
		<% end %>		
	<%end%>		
</div>