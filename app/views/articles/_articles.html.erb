<% @articles.each do |article| %>
			<div class="post-form col-md-6 col-md-offset-3 col-xs-8 col-xs-offset-2 col-sm-10 col-sm-offset-1" 
			id="article_<%=article.id%>">
				<div class="post-header">
					<div class="form-horizontal">
						<div class="post-header-left">
							<%=link_to "#{ article.account.first_name}", account_path(username:article.account.username) %>
							<p id="datepost">Post on <%= article.created_at %></p>
							<p style="right"></p>
						</div>
						<div class=" post-header-right">
						  <div class="dropdown">
							  <span class="glyphicon glyphicon-menu-down dropdown-toggle" type="button" data-toggle="dropdown">
							  </span>
							  <ul class="dropdown-menu dropdown-menu-right">
							    	<li>
										<%= link_to "Edit" , edit_article_path(id:article.id),remote: true%></li>
									<li> <%=link_to "Delete", article_path(id:article.id), method: :delete,remote: true, data: {confirm: "Are u sure?"}%></li>
							  </ul>
							</div>	

						</div>
					</div>
				</div>
			<div class="post-body"> 
				<%= article.content %>
				<br>
				<% article.photos.each do |photo|%>
					<%= image_tag("/images/#{photo.id}/#{photo.image_file_name}", width:300)	%>
				<%end%>
			</div>
			<div class="post-footer">
		  	<p> <span class="label label-info"><%= article.cache_comment_count %></span><%= link_to 'Comments',articles_show_comments_path(id:article.id),remote: true %></p>
			</div>
		</div>
	<%end%>