

<div class="container">
  <div class="comment">
      <div class="media-left">
               <img src="img_avatar1.png" class="media-object" style="width:45px">
      </div>
     <div class="media-body">
          <h4 class="media-heading"><%= "#{@account.first_name+" " + @account.last_name}"%> <small><i>Posted on
               <%= @article.created_at %> 
                  </i></small></h4> <button>asdas</button>
          <p><%= @article.content %></p>
          <button data-toggle="collapse" data-target="#demo" class='btn btn-default'>Comment</button>
    
      <div id="demo" class="collapse">
           <div class="media">
           <div class="media-body">
           <%= form_for @newcomment , url: article_comments_path(article_id: @article.id) do |f| %>
          <div class="form-group">
         <label for="comment" >Comment:</label>
          <%= f.text_area  :content , class:"form-control", :rows=>"3"%>
          <%= f.submit class:'btn btn-default'%>
           <% end %>
          </div>
      
           </div>
           </div>
        
      </div>
      <!-- Nested media object -->

      <% @comments.reverse.each do |comment| %>
      <div class="comments">
        <div class="comments-left">
         <%= link_to "#{current_account.first_name }", url:user_path(id:current_account.id)%>
        </div>
        <div class="comments-body">
          <h4 class="comments-heading"><%="#{comment.account.first_name+" " + comment.account.last_name}" %> 
           <small><i>Posted on February 19, 2016</i></small>
           <%if @account.id ==current_account.id %>
                <div class="btn-group">
              <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <span class="glyphicon glyphicon-align-justify"></span> <span class="caret"></span>
             </button>
            <ul class="dropdown-menu">
            <li><%=link_to "Delete",url:article_comment_path(article_id: @article.id, id: comment.id), method: :delete, data: {confirm: "Are u sure?"} %></li>
            </ul>
            </div>
                


            <%else%>
                <%if  logged_in? %>
                      <div class="btn-group">
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                          <span class="glyphicon glyphicon-align-justify"></span> <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                        
                          <li><%=link_to "Edit",url: edit_article_comment_path(article_id: @article.id , id: comment.id) %></li>
                          <li><%=link_to "Delete", url: article_comment_path(article_id: @article.id, id: comment.id), method: :delete, data: {confirm: "Are u sure?"} %></li>
                         
                        </ul>
                    </div>
                <%else %>
                <%end%>

            <%end%>

          
</h4>

          <p><%=comment.content%></p>
		    </div>
          
      </div>
    <%end %>
      
    </div>
  </div>
</div>