
<div class="container sign_up">
	<div class="row">
		<div class="header">
			<p><strong>SIGN UP FORM</strong></p>		
		</div>
	</div>

	<div class="row">
		<div class="sign-up-form col-md-4 col-md-offset-4">
		
		<%= form_for @account, url: users_path ,class:"form-horizontal" do |f| %>
		<% if @account.errors.any? %>
		<div id="error_explanation">
			<div class="alert alert-danger">
				The form contains <%= pluralize(@account.errors.count, "error") %>.
			</div>
			<ul>
				<% @account.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
		<% end %>
			<div class="form-group">
				<label >First name</label>	
				<br>
				<%= f.text_field :first_name ,class: "form-control"%>

			</div>
			<div class="form-group">
				<label > Last name</label>
				<br>
				<%= f.text_field :last_name ,class: "form-control" %>
			
			</div>
			<div class="form-group">
				<label > Email</label>
				<br>
				<%= f.text_field :email ,class: "form-control" %>
			
			</div>
			<div class="form-group">
				<label > Password</label>
				<br>
				<%= f.text_field :password ,type:"password", class: "form-control"%>
			
			</div>
			<div class="center">
			<%= f.submit 'Sign up', class: "btn btn-primary"  %><br>
			<label>Already account? <%= link_to "Sign in" ,sign_in_path %></label>
				
			</div>
		<% end %>
		
		</div>


	</div>
</div>





